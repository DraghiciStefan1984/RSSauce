<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feed Title"
        android:id="@+id/rssFeedItemTitleTextView"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="www.rss.com"
        android:id="@+id/rssEditFeedAddressTextView"
        android:layout_below="@+id/rssFeedItemTitleTextView"
        android:layout_toRightOf="@+id/rssFeedItemImageView"
        android:layout_toEndOf="@+id/rssFeedItemImageView"
        android:textColor="#000000"
        android:maxLength="30"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tap to Delete"
        android:id="@+id/deleteFeedTextView"
        android:layout_below="@+id/rssFeedItemTitleTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:padding="5dp"/>
</RelativeLayout>
